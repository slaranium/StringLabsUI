---
// src/layouts/MainLayout.astro
import '../global.css'; 
import '@fontsource/plus-jakarta-sans';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="StringLabs Portfolio" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-brand-bg text-white font-sans antialiased overflow-x-hidden">
    
    <div class="fixed inset-0 -z-10 pointer-events-none">
        <div class="absolute top-[-10%] left-[-10%] w-[500px] h-[500px] bg-brand-primary/20 rounded-full blur-[120px]"></div>
        <div class="absolute bottom-[-10%] right-[-10%] w-[500px] h-[500px] bg-brand-secondary/10 rounded-full blur-[120px]"></div>
    </div>

    <header class="fixed w-full top-0 z-50 backdrop-blur-md border-b border-brand-border bg-brand-bg/60">
        <div class="max-w-7xl mx-auto px-6 h-20 flex items-center justify-between relative z-50">
            
            <a href="/" class="flex items-center gap-3 group">
                <img 
                    src="/logo.png" 
                    alt="StringLabs Logo" 
                    class="w-12 h-12 object-contain group-hover:scale-110 transition-transform duration-300"
                />
                <span class="text-xl font-bold text-white">StringLabs<span class="text-brand-primary"></span></span>
            </a>

            <nav class="hidden md:flex gap-8 text-sm font-medium text-brand-text-muted">
                <a href="/" class="hover:text-white transition-colors">Home</a>
                <a href="/network" class="hover:text-white transition-colors">Network</a>
                <a href="https://explorer.stringlabs.site" class="hover:text-white transition-colors">Service</a>
                <a href="/about" class="hover:text-white transition-colors">About</a>
            </nav>

            <button id="menu-btn" class="md:hidden p-2 text-white focus:outline-none z-50">
                <svg id="icon-hamburger" xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="block">
                    <line x1="3" y1="12" x2="21" y2="12"></line>
                    <line x1="3" y1="6" x2="21" y2="6"></line>
                    <line x1="3" y1="18" x2="21" y2="18"></line>
                </svg>
                <svg id="icon-close" xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="hidden">
                    <line x1="18" y1="6" x2="6" y2="18"></line>
                    <line x1="6" y1="6" x2="18" y2="18"></line>
                </svg>
            </button>

        </div>

        <div id="mobile-menu" class="fixed inset-0 bg-[#0B0B15]/95 backdrop-blur-xl z-40 flex flex-col items-center justify-center gap-8 opacity-0 pointer-events-none transition-all duration-300 translate-y-[-20px] md:hidden h-screen w-screen">
            
            <div class="absolute top-0 right-0 w-[300px] h-[300px] bg-brand-primary/20 rounded-full blur-[100px] pointer-events-none"></div>

            <a href="/" class="mobile-link text-3xl font-bold text-white hover:text-brand-primary transition-colors">Home</a>
            <a href="/network" class="mobile-link text-3xl font-bold text-white hover:text-brand-primary transition-colors">Network</a>
            <a href="/service" class="mobile-link text-3xl font-bold text-white hover:text-brand-primary transition-colors">Service</a>
            <a href="/about" class="mobile-link text-3xl font-bold text-white hover:text-brand-primary transition-colors">About</a>
            
            <a href="https://wa.me/628123456789" class="mt-8 px-8 py-3 bg-brand-primary rounded-full font-bold text-white mobile-link">
                Contact Us
            </a>
        </div>
    </header>

    <main class="pt-24 min-h-screen">
        <slot />
    </main>

    <footer class="border-t border-white/10 bg-black/40 backdrop-blur-md pt-20 pb-10">
        <div class="max-w-7xl mx-auto px-6">
            
            <div class="grid grid-cols-1 md:grid-cols-4 gap-12 mb-16">
                
                <div class="space-y-6">
                    <a href="/" class="flex items-center gap-3 group">
                        <img 
                            src="/logo.png" 
                            alt="StringLabs Logo" 
                            class="w-10 h-10 object-contain group-hover:scale-110 transition-transform duration-300"
                        />
                        <span class="text-xl font-bold text-white">StringLabs<span class="text-brand-primary"></span></span>
                    </a>
                    
                    <p class="text-brand-text-muted text-sm leading-relaxed">
                        Empowering the decentralized economy with secure, high-performance validator infrastructure and reliable node services for delegators worldwide.
                    </p>
                    <a href="https://wa.me/628123456789" class="inline-flex items-center gap-2 border border-white/10 rounded-lg px-4 py-2 text-xs font-bold hover:bg-white/5 transition">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"/></svg>
                        Support on WhatsApp
                    </a>
                </div>

                <div>
                    <h4 class="font-bold text-white mb-6">Quick Links</h4>
                    <ul class="space-y-4 text-sm text-brand-text-muted">
                        <li><a href="#" class="hover:text-brand-primary transition">Schedule Meeting</a></li>
                        <li><a href="#" class="hover:text-brand-primary transition">Contact Us</a></li>
                        <li><a href="#" class="hover:text-brand-primary transition">System Status</a></li>
                    </ul>
                </div>

                <div>
                    <h4 class="font-bold text-white mb-6">Company</h4>
                    <ul class="space-y-4 text-sm text-brand-text-muted">
                        <li><a href="/network" class="hover:text-brand-primary transition">Networks</a></li>
                        <li><a href="/service" class="hover:text-brand-primary transition">Services</a></li>
                        <li><a href="/about" class="hover:text-brand-primary transition">About Us</a></li>
                    </ul>
                </div>

                <div>
                    <h4 class="font-bold text-white mb-6">Resources</h4>
                    <ul class="space-y-4 text-sm text-brand-text-muted">
                        <li><a href="#" class="hover:text-brand-primary transition">Blog</a></li>
                        <li><a href="#" class="hover:text-brand-primary transition">Terms of Service</a></li>
                        <li><a href="#" class="hover:text-brand-primary transition">Privacy Policy</a></li>
                    </ul>
                </div>

            </div>

            <div class="border-t border-white/10 pt-8 flex flex-col md:flex-row justify-between items-center gap-4">
                <p class="text-xs text-brand-text-muted">
                    &copy; 2026 StringLabs. All rights reserved.
                </p>
                
                <div class="flex gap-6 text-brand-text-muted">
                    <a href="https://x.com/slaranium" target="_blank" class="hover:text-white transition"><svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor"><path d="M18.901 1.153h3.68l-8.04 9.19L24 22.846h-7.406l-5.8-7.584-6.638 7.584H.474l8.6-9.83L0 1.154h7.594l5.243 6.932ZM17.61 20.644h2.039L6.486 3.24H4.298Z" /></svg></a>
                    <a href="https://github.com/slaranium" target="_blank" class="hover:text-white transition"><svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"/><path d="M9 18c-4.51 2-5-2-7-2"/></svg></a>
                    <a href="https://t.me/slarahimura" target="_blank" class="hover:text-white transition"><svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21.54 3.06a1 1 0 0 0-1-.24L2.85 9.49a1 1 0 0 0-.06 1.89l5.9 2.5 10.53-6.13a.5.5 0 0 1 .53.86L9.62 14.7l.14 6.07a1 1 0 0 0 1.64.67l3.66-3.09 5.2 3.85a1 1 0 0 0 1.57-.6l2.39-17a1 1 0 0 0-.68-1.14z"/></svg></a>
                    <a href="mailto:stringlabs.dev@gmail.com" class="hover:text-white transition"><svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="20" height="16" x="2" y="4" rx="2"/><path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/></svg></a>
                </div>
            </div>

        </div>
    </footer>

    <script is:inline>
        document.addEventListener('DOMContentLoaded', () => {
            const btn = document.getElementById('menu-btn');
            const menu = document.getElementById('mobile-menu');
            const iconHam = document.getElementById('icon-hamburger');
            const iconClose = document.getElementById('icon-close');
            const links = document.querySelectorAll('.mobile-link');

            if (btn && menu && iconHam && iconClose) {
                btn.addEventListener('click', () => {
                    const isOpen = menu.classList.contains('pointer-events-auto');

                    if (isOpen) {
                        // Tutup Menu
                        menu.classList.remove('opacity-100', 'pointer-events-auto', 'translate-y-0');
                        menu.classList.add('opacity-0', 'pointer-events-none', 'translate-y-[-20px]');
                        iconHam.classList.remove('hidden');
                        iconClose.classList.add('hidden');
                    } else {
                        // Buka Menu
                        menu.classList.remove('opacity-0', 'pointer-events-none', 'translate-y-[-20px]');
                        menu.classList.add('opacity-100', 'pointer-events-auto', 'translate-y-0');
                        iconHam.classList.add('hidden');
                        iconClose.classList.remove('hidden');
                    }
                });

                // Tutup menu otomatis saat link diklik
                links.forEach(link => {
                    link.addEventListener('click', () => {
                        menu.classList.remove('opacity-100', 'pointer-events-auto', 'translate-y-0');
                        menu.classList.add('opacity-0', 'pointer-events-none', 'translate-y-[-20px]');
                        iconHam.classList.remove('hidden');
                        iconClose.classList.add('hidden');
                    });
                });
            }
        });
    </script>
  </body>
</html>
