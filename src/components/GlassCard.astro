interface Props {
  className?: string;
  title?: string; // Opsional: jika ingin passing title langsung
}

const { className } = Astro.props;
---

<div class={`relative group overflow-hidden rounded-2xl border border-brand-border bg-white/5 backdrop-blur-sm p-8 hover:border-brand-primary/50 transition-colors duration-300 ${className}`}>
    
    <div class="absolute inset-0 bg-gradient-to-br from-brand-primary/10 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500 pointer-events-none"></div>
    
    <div class="relative z-10">
        <slot />
    </div>
</div>