const { network } = Astro.props;
---

<MainLayout title={`${network.name} - StringLabs`}>
    
    <div class="relative pt-32 pb-20 min-h-screen">
        
        <div class="absolute top-0 right-0 w-[500px] h-[500px] bg-brand-primary/10 blur-[150px] rounded-full -z-10 pointer-events-none"></div>

        <div class="max-w-[1400px] mx-auto px-6">
            
            <a href="/network" class="inline-flex items-center gap-2 text-brand-text-muted hover:text-white transition-colors mb-8 text-sm font-medium">
                <ArrowLeft className="w-4 h-4" /> Back to Projects
            </a>

            <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 items-start">
                
                <div class="lg:col-span-1 sticky top-24">
                    <div class="bg-[#0B0B15] border border-white/10 rounded-3xl p-8 text-center shadow-2xl relative overflow-hidden">
                        
                        <div class="absolute top-0 left-1/2 -translate-x-1/2 w-full h-1/2 bg-gradient-to-b from-brand-primary/5 to-transparent blur-3xl -z-10"></div>

                        <div class="w-28 h-28 mx-auto rounded-full bg-[#151520] border-4 border-[#1A1A25] p-5 flex items-center justify-center shadow-lg mb-6 relative z-10">
                            <img src={network.icon} alt={network.name} class="w-full h-full object-cover rounded-full" />
                        </div>

                        <h1 class="text-3xl font-bold text-white mb-2 tracking-tight">{network.name}</h1>
                        
                        <div class="inline-block px-4 py-1 rounded-full bg-[#1A1A25] text-brand-text-muted text-xs font-bold uppercase tracking-wider mb-6 border border-white/5">
                            {network.ticker || network.chainID}
                        </div>

                        <div class="flex flex-wrap justify-center gap-2 mb-8">
                            <span class="px-3 py-1 rounded-full text-xs font-bold bg-green-500/10 text-green-400 border border-green-500/20">
                                Active
                            </span>
                            <span class={`px-3 py-1 rounded-full text-xs font-bold border ${network.type === 'MAINNET' ? 'bg-blue-500/10 text-blue-400 border-blue-500/20' : 'bg-yellow-500/10 text-yellow-400 border-yellow-500/20'}`}>
                                {network.type}
                            </span>
                            <span class="px-3 py-1 rounded-full text-xs font-bold bg-[#1A1A25] text-gray-400 border border-white/5">
                                {network.chainID}
                            </span>
                        </div>

                        <div class="flex flex-col gap-3">
                            <a href={network.website || '#'} target="_blank" class="group flex items-center justify-between px-5 py-3 bg-[#151520] border border-white/5 rounded-xl hover:border-brand-primary/50 hover:bg-[#1A1A25] transition-all duration-300">
                                <span class="flex items-center gap-3 font-semibold text-white text-sm">
                                    <Globe className="w-4 h-4 text-gray-400 group-hover:text-brand-primary transition-colors" />
                                    Website
                                </span>
                                <ExternalLink className="w-3 h-3 text-gray-500 group-hover:text-white transition-transform" />
                            </a>
                            <a href={network.github || '#'} target="_blank" class="group flex items-center justify-between px-5 py-3 bg-[#151520] border border-white/5 rounded-xl hover:border-brand-primary/50 hover:bg-[#1A1A25] transition-all duration-300">
                                <span class="flex items-center gap-3 font-semibold text-white text-sm">
                                    <Code2 className="w-4 h-4 text-gray-400 group-hover:text-brand-primary transition-colors" />
                                    GitHub
                                </span>
                                <ExternalLink className="w-3 h-3 text-gray-500 group-hover:text-white transition-transform" />
                            </a>
                            <a href={network.docs || '#'} target="_blank" class="group flex items-center justify-between px-5 py-3 bg-[#151520] border border-white/5 rounded-xl hover:border-brand-primary/50 hover:bg-[#1A1A25] transition-all duration-300">
                                <span class="flex items-center gap-3 font-semibold text-white text-sm">
                                    <Book className="w-4 h-4 text-gray-400 group-hover:text-brand-primary transition-colors" />
                                    Official Docs
                                </span>
                                <ExternalLink className="w-3 h-3 text-gray-500 group-hover:text-white transition-transform" />
                            </a>
                        </div>
                    </div>
                </div>


                <div class="lg:col-span-2 space-y-8">
                    
                    <div class="bg-[#0B0B15] border border-white/10 rounded-3xl p-8">
                        <h2 class="text-2xl font-bold text-white mb-2">About {network.name}</h2>
                        <p class="text-brand-text-muted text-sm mb-6">Project Overview</p>
                        
                        <p class="text-gray-300 leading-relaxed mb-8">
                            {network.description || `StringLabs is providing secure and reliable validation services for ${network.name}. We ensure high uptime and governance participation.`}
                        </p>

                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 pt-6 border-t border-white/5">
                            <div class="flex items-start gap-3">
                                <Tag className="w-5 h-5 text-brand-text-muted mt-0.5" />
                                <div>
                                    <span class="block text-xs text-brand-text-muted uppercase tracking-wider mb-1">Category</span>
                                    <span class="text-white font-semibold">{network.category || 'Blockchain'}</span>
                                </div>
                            </div>
                            <div class="flex items-start gap-3">
                                <Network className="w-5 h-5 text-brand-text-muted mt-0.5" />
                                <div>
                                    <span class="block text-xs text-brand-text-muted uppercase tracking-wider mb-1">Network</span>
                                    <span class="text-white font-semibold">{network.type}</span>
                                </div>
                            </div>
                            <div class="flex items-start gap-3">
                                <Activity className="w-5 h-5 text-brand-text-muted mt-0.5" />
                                <div>
                                    <span class="block text-xs text-brand-text-muted uppercase tracking-wider mb-1">Status</span>
                                    <span class="text-green-400 font-semibold">Active</span>
                                </div>
                            </div>
                        </div>
                    </div>


                    <div class="bg-[#0B0B15] border border-white/10 rounded-3xl p-8 min-h-[500px]">
                        
                        <div class="mb-6">
                            <h2 class="text-2xl font-bold text-white mb-2">Node Setup Guide</h2>
                            <p class="text-brand-text-muted text-sm">Follow these instructions to set up and run a {network.name} node.</p>
                        </div>

                        <div class="flex border-b border-white/10 mb-8 overflow-x-auto">
                            <button class="tab-btn px-4 py-3 text-sm font-bold text-white border-b-2 border-brand-primary transition-colors hover:text-white whitespace-nowrap" data-target="installation">
                                Installation
                            </button>
                            <button class="tab-btn px-4 py-3 text-sm font-bold text-brand-text-muted border-b-2 border-transparent transition-colors hover:text-white whitespace-nowrap" data-target="snapshot">
                                Snapshot
                            </button>
                            <button class="tab-btn px-4 py-3 text-sm font-bold text-brand-text-muted border-b-2 border-transparent transition-colors hover:text-white whitespace-nowrap" data-target="genesis">
                                Genesis & Addrbook
                            </button>
                            <button class="tab-btn px-4 py-3 text-sm font-bold text-brand-text-muted border-b-2 border-transparent transition-colors hover:text-white whitespace-nowrap" data-target="endpoints">
                                Endpoints
                            </button>
                        </div>

                        <div id="installation" class="tab-content block">
                            <div class="bg-[#151520] border border-white/5 rounded-xl p-6 mb-6">
                                <h3 class="text-lg font-bold text-green-400 mb-4">Automatic Installation</h3>
                                <p class="text-gray-400 text-sm mb-4">Use our automated script to install the node, configure binary, and set up systemd service in one go.</p>
                                
                                <div class="relative group">
                                    <pre class="bg-[#05050A] p-4 rounded-lg border border-white/10 overflow-x-auto"><code class="text-sm font-mono text-gray-300">source &lt;(curl -s https://raw.githubusercontent.com/stringlabs/scripts/main/{network.id}/install.sh)</code></pre>
                                    <button class="copy-btn absolute top-3 right-3 p-2 bg-white/5 hover:bg-white/10 rounded text-gray-400 hover:text-white transition-colors" data-copy={`source <(curl -s https://raw.githubusercontent.com/stringlabs/scripts/main/${network.id}/install.sh)`}>
                                        <Copy className="w-4 h-4" />
                                    </button>
                                </div>
                            </div>

                            <div class="bg-[#151520] border border-white/5 rounded-xl p-6">
                                <h3 class="text-lg font-bold text-white mb-4">Prerequisites</h3>
                                <ul class="list-disc list-inside text-gray-400 text-sm space-y-2">
                                    <li>CPU: 4 Cores</li>
                                    <li>RAM: 8 GB</li>
                                    <li>Storage: 200 GB SSD</li>
                                    <li>OS: Ubuntu 22.04 LTS</li>
                                </ul>
                            </div>
                        </div>

                        <div id="snapshot" class="tab-content hidden">
                            <div class="bg-[#151520] border border-white/5 rounded-xl p-6 text-center py-12">
                                <Database className="w-12 h-12 text-brand-primary mx-auto mb-4 opacity-80" />
                                <h3 class="text-xl font-bold text-white mb-2">Daily Snapshots</h3>
                                <p class="text-gray-400 text-sm mb-8">Updated every 6 hours. Download to sync faster.</p>
                                
                                <div class="text-left relative group max-w-xl mx-auto">
                                    <pre class="bg-[#05050A] p-4 rounded-lg border border-white/10 overflow-x-auto"><code class="text-sm font-mono text-blue-400">sudo systemctl stop {network.binary}
curl -L https://snap.stringlabs.dev/{network.id}/latest.tar.lz4 | lz4 -dc - | tar -xf - -C $HOME/.{network.binary}
sudo systemctl restart {network.binary}</code></pre>
                                    <button class="copy-btn absolute top-3 right-3 p-2 bg-white/5 hover:bg-white/10 rounded text-gray-400 hover:text-white transition-colors" data-copy="Snapshot code copied!">
                                        <Copy className="w-4 h-4" />
                                    </button>
                                </div>
                            </div>
                        </div>

                        <div id="genesis" class="tab-content hidden">
                             <div class="bg-[#151520] border border-white/5 rounded-xl p-6">
                                <h3 class="text-lg font-bold text-white mb-4">Genesis & Addrbook</h3>
                                <div class="relative group">
                                    <pre class="bg-[#05050A] p-4 rounded-lg border border-white/10 overflow-x-auto"><code class="text-sm font-mono text-yellow-400">curl -Ls https://snap.stringlabs.dev/{network.id}/genesis.json > $HOME/.{network.binary}/config/genesis.json
curl -Ls https://snap.stringlabs.dev/{network.id}/addrbook.json > $HOME/.{network.binary}/config/addrbook.json</code></pre>
                                    <button class="copy-btn absolute top-3 right-3 p-2 bg-white/5 hover:bg-white/10 rounded text-gray-400 hover:text-white transition-colors" data-copy="Genesis code copied!">
                                        <Copy className="w-4 h-4" />
                                    </button>
                                </div>
                            </div>
                        </div>

                         <div id="endpoints" class="tab-content hidden space-y-4">
                            <div>
                                <label class="text-xs text-brand-text-muted uppercase tracking-wider mb-2 block">RPC Endpoint</label>
                                <div class="relative group">
                                    <input type="text" readonly value={network.rpc} class="w-full bg-[#05050A] border border-white/10 rounded-lg px-4 py-3 text-sm text-gray-300 font-mono focus:outline-none focus:border-brand-primary/50" />
                                    <button class="copy-btn absolute top-2 right-2 p-1.5 hover:bg-white/10 rounded text-gray-400 transition-colors" data-copy={network.rpc}>
                                        <Copy className="w-4 h-4" />
                                    </button>
                                </div>
                            </div>
                            <div>
                                <label class="text-xs text-brand-text-muted uppercase tracking-wider mb-2 block">API Endpoint</label>
                                <div class="relative group">
                                    <input type="text" readonly value={network.api} class="w-full bg-[#05050A] border border-white/10 rounded-lg px-4 py-3 text-sm text-gray-300 font-mono focus:outline-none focus:border-brand-primary/50" />
                                    <button class="copy-btn absolute top-2 right-2 p-1.5 hover:bg-white/10 rounded text-gray-400 transition-colors" data-copy={network.api}>
                                        <Copy className="w-4 h-4" />
                                    </button>
                                </div>
                            </div>
                             <div>
                                <label class="text-xs text-brand-text-muted uppercase tracking-wider mb-2 block">gRPC Endpoint</label>
                                <div class="relative group">
                                    <input type="text" readonly value={network.grpc} class="w-full bg-[#05050A] border border-white/10 rounded-lg px-4 py-3 text-sm text-gray-300 font-mono focus:outline-none focus:border-brand-primary/50" />
                                    <button class="copy-btn absolute top-2 right-2 p-1.5 hover:bg-white/10 rounded text-gray-400 transition-colors" data-copy={network.grpc}>
                                        <Copy className="w-4 h-4" />
                                    </button>
                                </div>
                            </div>
                        </div>

                    </div>

                </div>

            </div>
        </div>
    </div>

    <script>
        const tabBtns = document.querySelectorAll('.tab-btn');
        const tabContents = document.querySelectorAll('.tab-content');

        tabBtns.forEach(btn => {
            btn.addEventListener('click', () => {
                // 1. Reset Styles
                tabBtns.forEach(b => {
                    b.classList.remove('border-brand-primary', 'text-white');
                    b.classList.add('border-transparent', 'text-brand-text-muted');
                });
                tabContents.forEach(c => c.classList.add('hidden'));

                // 2. Set Active Style
                btn.classList.remove('border-transparent', 'text-brand-text-muted');
                btn.classList.add('border-brand-primary', 'text-white');
                
                // 3. Show Content
                const targetId = btn.getAttribute('data-target');
                if (targetId) {
                    const targetElement = document.getElementById(targetId);
                    if (targetElement) {
                        targetElement.classList.remove('hidden');
                    }
                }
            });
        });

        // Copy Logic
        const copyBtns = document.querySelectorAll('.copy-btn');
        copyBtns.forEach(btn => {
            btn.addEventListener('click', () => {
                const textToCopy = btn.getAttribute('data-copy');
                if (textToCopy) {
                    navigator.clipboard.writeText(textToCopy);
                    const originalHTML = btn.innerHTML;
                    btn.innerHTML = `<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-green-400"><polyline points="20 6 9 17 4 12"/></svg>`;
                    setTimeout(() => { btn.innerHTML = originalHTML; }, 2000);
                }
            });
        });
    </script>

</MainLayout>
