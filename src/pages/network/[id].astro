---
// src/pages/network/[id].astro
import MainLayout from '../../layouts/MainLayout.astro';
import { ArrowLeft, Copy, Globe, Database, ExternalLink, Code2, Book, Tag, Activity, Network } from 'lucide-react';

// 1. GENERATE STATIC PATHS
